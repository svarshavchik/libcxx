#! /bin/bash

set -e
shopt -s extglob

if test "$DEBGCC" = ""
then
	DEBGCC=`readlink /usr/bin/gcc | sed 's/gcc-//'`

	case "$DEBGCC" in
	[1-9]*([0-9]))
		      ;;
	*)
	    echo "Cannot determine gcc version"
	    exit 1
	    ;;
	esac
fi

rm -rf debian
cp -pr packaging/debian .

. /etc/lsb-release

RELEASE="${RELEASE-100}+`echo $DISTRIB_RELEASE | tr '.' '+'`"

for f in debian/changelog debian/control debian/rules
do
	sed "
s/@""VERSION""@/@VERSION@/g
s/@""RELEASE""@/$RELEASE/g
s/@""DEBGCC""@/$DEBGCC/g
s/@""SOVERSION""@/@SOVERSION@/g
s/@""ABIVER""@/@ABIVER@/g
s/@DATE@/`date -R`/g
" <$f.in >$f
done

chmod +x debian/rules

debuild "$@"
