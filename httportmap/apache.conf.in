<IfModule mod_alias.c>
  <IfModule mod_cgi.c>
    Define ENABLE_HTTPORTMAP
  </IfModule>

  <IfModule mod_cgid.c>
    Define ENABLE_HTTPORTMAP
  </IfModule>

  <IfDefine ENABLE_HTTPORTMAP>
    <Location /portmap>
      SetHandler cgi-script
      Options +ExecCGI
    </Location>

    <Directory @sbindir@>
      <Files "httportmapd">
        Require all granted
      </Files>
    </Directory>

    RewriteEngine on
    RewriteRule /portmap @httportmapd@
  </IfDefine>
</IfModule>
